param(
  [Parameter(Mandatory=$true)][string[]]$AuditRoots,           # Paths to folders like _AUDIT_RESULTS_PC1_20251120_23XX
  [string]$CanonicalReposRoot = "C:\Users\andyj\source\repos",  # Root of governed repos
  [string]$OutDir = "./FINAL_LEDGER_OUTPUT",                      # Output directory for merged ledgers
  [string]$CanonicalLedger = "Fleet_HistoricalIP_Ledger.csv",     # File name for full ledger
  [string]$DeletionList = "Fleet_ColdStorage_Delete.csv",         # File name for deletion proposal
  [int]$LargeModelMinMB = 50,                                      # Threshold for anomalous model detection
  [string[]]$DeclaredModelDirs = @("$env:USERPROFILE/.lmstudio/models","C:\Models","C:\AI\Models","D:\LLM")
)

function Ensure-Dir($p){ if(-not (Test-Path $p)){ New-Item -ItemType Directory -Force -Path $p | Out-Null } }
function Load-CsvSingle([string]$root,[string]$pattern){ Get-ChildItem -Path $root -Filter $pattern -ErrorAction SilentlyContinue | Select-Object -First 1 }

Ensure-Dir $OutDir

$deepRows = @()
$modelRows = @()

Write-Host "--- Consolidation Start ---" -ForegroundColor Cyan
Write-Host "Canonical Root: $CanonicalReposRoot" -ForegroundColor Gray
Write-Host "Audit Roots: $($AuditRoots -join ', ')" -ForegroundColor Gray

foreach($root in $AuditRoots){
  if(-not (Test-Path $root)){ Write-Warning "Missing audit root: $root"; continue }
  $nodeName = (Split-Path $root -Leaf) -replace '^_AUDIT_RESULTS_','' -replace '_\d{8}_\d{6}$',''
  Write-Host "Processing node: $nodeName" -ForegroundColor DarkGray

  $deepCsv = Load-CsvSingle $root '*_DEEP_FORGE.csv'
  $modelsCsv = Load-CsvSingle $root '*_AI_MODELS.csv'

  if($deepCsv){
    try {
      $d = Import-Csv -LiteralPath $deepCsv.FullName
      $d | ForEach-Object {
        $_ | Add-Member -NotePropertyName Node -NotePropertyValue $nodeName -Force
        $deepRows += $_
      }
    } catch { Write-Warning "Failed import deep forge: $($_.Exception.Message)" }
  } else { Write-Warning "No DEEP_FORGE for $root" }

  if($modelsCsv){
    try {
      $m = Import-Csv -LiteralPath $modelsCsv.FullName
      $m | ForEach-Object {
        $_ | Add-Member -NotePropertyName Node -NotePropertyValue $nodeName -Force
        # Normalize column names if different (Path vs ModelPath)
        if(-not $_.PSObject.Properties['ModelPath']){ $_ | Add-Member -NotePropertyName ModelPath -NotePropertyValue $_.Path -Force }
        $modelRows += $_
      }
    } catch { Write-Warning "Failed import AI models: $($_.Exception.Message)" }
  } else { Write-Warning "No AI_MODELS for $root" }
}

Write-Host "Deep Forge rows: $($deepRows.Count)" -ForegroundColor Green
Write-Host "Model rows: $($modelRows.Count)" -ForegroundColor Green

# Canonical repository roots list
$canonicalRoots = @()
if(Test-Path $CanonicalReposRoot){ $canonicalRoots = Get-ChildItem -Path $CanonicalReposRoot -Directory -ErrorAction SilentlyContinue | ForEach-Object { $_.FullName } }

# Tag canonical vs rogue
$deepRows | ForEach-Object {
  $p = $_.Path
  $isCanon = $false
  foreach($cr in $canonicalRoots){ if($p -like "$cr*"){ $isCanon = $true; break } }
  $_ | Add-Member -NotePropertyName Canonical -NotePropertyValue $isCanon -Force
  $_ | Add-Member -NotePropertyName Rogue -NotePropertyValue (-not $isCanon) -Force
}

$rogue = $deepRows | Where-Object { $_.Rogue }
Write-Host "Rogue development files: $($rogue.Count)" -ForegroundColor Yellow

# Tag model declared location + anomaly
$modelRows | ForEach-Object {
  $mp = $_.ModelPath
  $declared = $false
  foreach($dDir in $DeclaredModelDirs){ if($dDir -and (Test-Path $dDir) -and ($mp -like "$dDir*")){ $declared = $true; break } }
  $sizeMB = 0
  if($_.PSObject.Properties['SizeBytes']){ $sizeMB = [math]::Round(($_.SizeBytes / 1MB),2) }
  elseif($_.PSObject.Properties['SizeMB']){ $sizeMB = [double]$_.SizeMB }
  $anomalous = (-not $declared) -and ($sizeMB -ge $LargeModelMinMB)
  $_ | Add-Member -NotePropertyName DeclaredLocation -NotePropertyValue $declared -Force
  $_ | Add-Member -NotePropertyName SizeMB -NotePropertyValue $sizeMB -Force
  $_ | Add-Member -NotePropertyName Anomalous -NotePropertyValue $anomalous -Force
}

$anomalousModels = $modelRows | Where-Object { $_.Anomalous }
Write-Host "Anomalous models (>$LargeModelMinMB MB outside declared dirs): $($anomalousModels.Count)" -ForegroundColor Yellow

# Build ledger
$ledger = $deepRows | Select-Object Node, Path, @{n='SizeKB';e={ if($_.PSObject.Properties['SizeKB']){ $_.SizeKB } elseif($_.PSObject.Properties['SizeBytes']){ [math]::Round($_.SizeBytes/1KB,2) } else { '' } }}, ModifiedUtc, Canonical, Rogue
$ledgerPath = Join-Path $OutDir $CanonicalLedger
$ledger | Export-Csv -LiteralPath $ledgerPath -NoTypeInformation -Encoding UTF8

# Build deletion list (rogue + anomalous models)
$deleteList = @()
$deleteList += ($rogue | Select-Object Node, Path, @{n='SizeKB';e={ if($_.PSObject.Properties['SizeKB']){ $_.SizeKB } elseif($_.PSObject.Properties['SizeBytes']){ [math]::Round($_.SizeBytes/1KB,2) } else { '' } }}, ModifiedUtc, @{n='Reason';e={'Rogue Development File'}})
$deleteList += ($anomalousModels | Select-Object Node, @{n='Path';e={$_.ModelPath}}, SizeMB, ModifiedUtc, @{n='Reason';e={'Anomalous Model (Outside Declared Dirs)'}})
$deletePath = Join-Path $OutDir $DeletionList
$deleteList | Export-Csv -LiteralPath $deletePath -NoTypeInformation -Encoding UTF8

Write-Host "--- Consolidation Complete ---" -ForegroundColor Green
Write-Host "Ledger: $ledgerPath" -ForegroundColor Green
Write-Host "Deletion Proposal: $deletePath" -ForegroundColor Yellow
Write-Host "Rogue Files: $($rogue.Count) | Anomalous Models: $($anomalousModels.Count)" -ForegroundColor Gray
