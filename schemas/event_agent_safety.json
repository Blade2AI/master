{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/event_agent_safety.json",
  "title": "Agent Safety / Drift Event",
  "type": "object",
  "required": ["event_type", "timestamp", "agent_id", "detector", "severity", "version"],
  "properties": {
    "event_type": {"const": "agent_safety"},
    "timestamp": {"type": "string", "format": "date-time"},
    "agent_id": {"type": "string"},
    "detector": {"type": "string"},
    "severity": {"type": "string", "enum": ["info", "low", "medium", "high", "critical"]},
    "signal": {"type": "string"},
    "metrics": {"type": "object"},
    "recommendation": {"type": "string"},
    "version": {"type": "string"}
  }
}