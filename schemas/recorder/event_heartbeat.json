{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "event_heartbeat",
  "type": "object",
  "required": ["event_type", "event_id", "timestamp", "payload"],
  "properties": {
    "event_type": { "const": "event_heartbeat" },
    "event_id": { "type": "string", "minLength": 8 },
    "timestamp": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T" },
    "schema_version": { "type": ["string", "null"] },
    "node_id": { "type": ["string", "null"] },
    "payload": {
      "type": "object",
      "required": ["status", "agent_id", "created_utc"],
      "properties": {
        "status": { "type": "string", "enum": ["alive", "degraded", "terminated"] },
        "agent_id": { "type": "string", "minLength": 3 },
        "created_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
