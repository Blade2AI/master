{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "event_anchor_created",
  "type": "object",
  "required": ["event_type", "event_id", "timestamp", "payload"],
  "properties": {
    "event_type": { "const": "event_anchor_created" },
    "event_id": { "type": "string", "minLength": 8 },
    "timestamp": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T" },
    "schema_version": { "type": ["string", "null"] },
    "node_id": { "type": ["string", "null"] },
    "payload": {
      "type": "object",
      "required": ["anchor_id", "root_hash", "tx_id", "cid", "created_utc"],
      "properties": {
        "anchor_id": { "type": "string", "minLength": 8 },
        "root_hash": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
        "tx_id": { "type": ["string", "null"], "minLength": 10 },
        "cid": { "type": ["string", "null"], "minLength": 10 },
        "created_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T" },
        "manifest": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
